@model AgenceTest.ViewModels.PeriodoConsultores

@{
    ViewData["Title"] = "Consultores";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="card-body">

                <form asp-controller="Home" asp-action="Index"
                      data-ajax="true"
                      data-ajax-method="post"
                      data-ajax-update="#consultores-list"
                      data-ajax-begin="showSpinner"
                      data-ajax-complete="CreateCharts">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="input-daterange input-group" id="datepicker">
                                <span class="input-group-addon">Desde&nbsp;</span>
                                <input asp-for="FromDate" type="text" class="form-control" autocomplete="off" />
                                <span class="input-group-addon">&emsp; Hasta&nbsp;</span>
                                <input asp-for="ToDate" type="text" class="form-control" autocomplete="off" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConsultIds" class="control-label"></label>
                        <select asp-for="ConsultIds" class="form-control" autofocus multiple asp-items="@ViewBag.Consultores"></select>
                        <span asp-validation-for="ConsultIds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input id="submit-inform-btn" type="submit" value="Informe" class="btn btn-primary" />
                    </div>
                </form>

                <div id="spinner-partial" style="display: none">
                    <partial name="_spinner" />
                </div>

                <div id="informe" style="display: none">

                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item"><a class="nav-link active show" data-toggle="tab" href="#reporte" role="tab" aria-controls="reporte" aria-selected="true"><b>Informe</b></a></li>
                        <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#grafico" role="tab" aria-controls="grafico" aria-selected="false"><b>Grafico</b></a></li>
                        <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#pizza" role="tab" aria-controls="pizza" aria-selected="false"><b>Pizza</b></a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active show" id="reporte" role="tabpanel">
                            <div id="consultores-list"></div>
                        </div>
                        <div class="tab-pane" id="grafico" role="tabpanel">
                            <canvas id="chart-data"></canvas>
                        </div>
                        <div class="tab-pane" id="pizza" role="tabpanel">
                            <canvas id="chart-pie"></canvas>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script src="~/lib/jquery-cookie/jquery.cookie.js"></script>
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/locales/bootstrap-datepicker.es.min.js"></script>
    <script src="~/lib/chartjs/Chart.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $('#ConsultIds').select2({
                theme: 'bootstrap4',
                placeholder: '(Seleccione los Consultores)',
                closeOnSelect: false
            });

            $('.input-daterange').datepicker({
                format: "mm/yyyy",
                endDate: 0,
                startView: 1,
                minViewMode: 1,
                maxViewMode: 2,
                language: "es",
                autoclose: true
            });

            //CreateChart();
        });

    </script>
}
